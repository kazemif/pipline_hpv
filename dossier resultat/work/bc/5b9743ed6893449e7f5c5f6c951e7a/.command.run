#!/bin/bash
### ---
### name: 'parse_variant_qc (barcode03)'
### outputs:
### - 'output_barcode03/barcode03.filtered.vcf'
### - 'output_barcode03/barcode03_pileup.csv'
### ...
set -e
set -u
NXF_DEBUG=${NXF_DEBUG:=0}; [[ $NXF_DEBUG > 1 ]] && set -x
NXF_ENTRY=${1:-nxf_main}


nxf_sleep() {
  sleep $1 2>/dev/null || sleep 1;
}

nxf_date() {
    local ts=$(date +%s%3N);
    if [[ ${#ts} == 10 ]]; then echo ${ts}000
    elif [[ $ts == *%3N ]]; then echo ${ts/\%3N/000}
    elif [[ $ts == *3N ]]; then echo ${ts/3N/000}
    elif [[ ${#ts} == 13 ]]; then echo $ts
    else echo "Unexpected timestamp value: $ts"; exit 1
    fi
}

nxf_env() {
    echo '============= task environment ============='
    env | sort | sed "s/\(.*\)AWS\(.*\)=\(.\{6\}\).*/\1AWS\2=\3xxxxxxxxxxxxx/"
    echo '============= task output =================='
}

nxf_kill() {
    declare -a children
    while read P PP;do
        children[$PP]+=" $P"
    done < <(ps -e -o pid= -o ppid=)

    kill_all() {
        [[ $1 != $$ ]] && kill $1 2>/dev/null || true
        for i in ${children[$1]:=}; do kill_all $i; done
    }

    kill_all $1
}

nxf_mktemp() {
    local base=${1:-/tmp}
    mkdir -p "$base"
    if [[ $(uname) = Darwin ]]; then mktemp -d $base/nxf.XXXXXXXXXX
    else TMPDIR="$base" mktemp -d -t nxf.XXXXXXXXXX
    fi
}

nxf_fs_copy() {
  local source=$1
  local target=$2
  local basedir=$(dirname $1)
  mkdir -p $target/$basedir
  cp -fRL $source $target/$basedir
}

nxf_fs_move() {
  local source=$1
  local target=$2
  local basedir=$(dirname $1)
  mkdir -p $target/$basedir
  mv -f $source $target/$basedir
}

nxf_fs_rsync() {
  rsync -rRl $1 $2
}

nxf_fs_rclone() {
  rclone copyto $1 $2/$1
}

nxf_fs_fcp() {
  fcp $1 $2/$1
}

on_exit() {
    exit_status=${nxf_main_ret:=$?}
    printf -- $exit_status > /home/etudiant/fatemeh/hbv_pipeline/src/work/bc/5b9743ed6893449e7f5c5f6c951e7a/.exitcode
    set +u
    exit $exit_status
}

on_term() {
    set +e
    [[ "$pid" ]] && nxf_kill $pid
}

nxf_launch() {
    /bin/bash -ue /home/etudiant/fatemeh/hbv_pipeline/src/work/bc/5b9743ed6893449e7f5c5f6c951e7a/.command.sh
}

nxf_stage() {
    true
    # stage input files
    rm -f sequence.fasta
    rm -f barcode03.sorted.bam
    rm -f barcode03.sorted.vcf.gz
    rm -f barcode03.sorted.vcf.gz.tbi
    ln -s /home/etudiant/fatemeh/hbv_pipeline/Ref/sequence.fasta sequence.fasta
    ln -s /home/etudiant/fatemeh/hbv_pipeline/src/work/6b/a7ebb4d32c5337b33ff523908dd237/barcode03.sorted.bam barcode03.sorted.bam
    ln -s /home/etudiant/fatemeh/hbv_pipeline/src/work/46/a9a64559bcf007ad68103f40409a66/barcode03.sorted.vcf.gz barcode03.sorted.vcf.gz
    ln -s /home/etudiant/fatemeh/hbv_pipeline/src/work/46/a9a64559bcf007ad68103f40409a66/barcode03.sorted.vcf.gz.tbi barcode03.sorted.vcf.gz.tbi
}

nxf_unstage() {
    true
    [[ ${nxf_main_ret:=0} != 0 ]] && return
}

nxf_main() {
    trap on_exit EXIT
    trap on_term TERM INT USR2
    trap '' USR1

    [[ "${NXF_CHDIR:-}" ]] && cd "$NXF_CHDIR"
    NXF_SCRATCH=''
    [[ $NXF_DEBUG > 0 ]] && nxf_env
    touch /home/etudiant/fatemeh/hbv_pipeline/src/work/bc/5b9743ed6893449e7f5c5f6c951e7a/.command.begin
    set +u
    set -u
    [[ $NXF_SCRATCH ]] && cd $NXF_SCRATCH
    export NXF_TASK_WORKDIR="$PWD"
    nxf_stage

    set +e
    (set -o pipefail; (nxf_launch | tee .command.out) 3>&1 1>&2 2>&3 | tee .command.err) &
    pid=$!
    wait $pid || nxf_main_ret=$?
    nxf_unstage
}

$NXF_ENTRY
